  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20250728.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "module": "build/index.js",
  "exports": {
    ".": "./build/index.js"
  },
  "homepage": "https://interactive-inc.github.io/open-notion",
  "repository": {
    "type": "git",
